<h1>Listing posts</h1>
<%= link_to 'New Post', new_post_path, class: "button tiny round", id: "new_link", remote: true %>
<% @posts.each do |post| %>
<div class= "panel small-12 columns">
  <div class="row">
    <div class= "small-12 columns">
      <div class="row">
        <div class = "small-2 columns">
          <%= link_to image_tag("#{post.user.photo_location}"), post.user %>
        </div>
        <div class = "small-7 columns">
          <h7><%= link_to post.title.html_safe, post.url, :target => "_blank" %></h7>
        </div>
        <div class = "small-1 columns">
          RP
        </div>
        <div class = "small-2 columns">
          <h6>0 comments</h6>
          <div class="row">
            <div class="small-12 columns">
              photo,photo
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class = "small-12 columns">
          <div class = "row">
            <div class = "small-4 columns">
              <h5><%= link_to post.user.name, post.user %></h5>
            </div>
            <div class="medium-6 columns">
              <a href="#" data-reveal-id="<%=dom_id(post)%>" class="radius button small">Summary</a>
              <% if current_user.has_role? :admin %>
                <%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %>
              <% end %>
            </div>
            <div class="small-2 columns">
              photo,photo
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="<%=dom_id(post)%>" class="reveal-modal" data-reveal>
    <h2><%= post.title.html_safe %></h2>
    <ul>
    <% post.summary.split("[BREAK]").each do |sentence| %>
    <%= simple_format(sentence.html_safe) %>
    <% end %>
    </ul>
    <a class="close-reveal-modal">&#215;</a>
  </div>
</div>

<% end %>




